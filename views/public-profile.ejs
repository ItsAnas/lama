<%- contentFor('title') %>
    User List

<%- contentFor('body') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/home"><img src="/images/llama-01.png" width="30" height="30" alt="">  Lama</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/my-profile"><i class="fas fa-user"></i> MyProfile</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/users-list"><i class="fas fa-users"></i> Users List</a>
            </li>  
          </ul>
        </div>
      </nav>

<div class="container animated fadeIn">
    <div class="profile-container">
        <div class="profile-header d-flex flex-column align-items-center">
            <img src="<%= user.profilepic %>" alt="" class="profile-img">
            <h1><%= user.lastname %> <%= user.name %></h1>
            <div class="skills-list">
                <% const skills = user.skills %>
                <% skills.forEach(skill => { %>
                <span class="badge badge-pill badge-primary"><%= skill %></span>
                <% }) %>
            </div>
        </div>
        <div class="profile-content">
            <div class="profile-bio">
                <h2>Bio</h2>
                <p><%= user.biography %></p>
            </div>
            <div class="profile-projects">
                    <h2>Projects</h2>
                <div class="card post">
                    <div class="row" style="margin:10px">
                        <div class="col-12 d-flex flex-column justify-content-between">
                            <h3>
                                <a href="#">Steve Urkel</a>
                            </h3>
                            <p class="post-desc">Aenean lacinia bibendum nulla sed consectetur. Fusce dapibus, tellus ac cursus commodo,
                                tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Maecenas
                                faucibus mollis interdum. Vestibulum id ligula porta felis euismod semper.</p>
                            <div class="d-flex skill-wrapper">
                                <span class="badge badge-pill badge-primary">React JS</span>
                                <span class="badge badge-pill badge-primary">Angular 2</span>
                                <span class="badge badge-pill badge-primary">MongoDB</span>
                            </div>
                            <button class="btn btn-outline-primary apply-btn">Join</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
        $(".apply-btn").click(function(){
        $(this).slideUp("slow", function(){
          if ($(this)[0].classList[1] == "btn-outline-primary")
            {
              $(this).html("Cancel");  
              $(this).attr('class', 'btn btn-danger apply-btn');
            }
          else
            {
                  $(this).html("Apply");  
                  $(this).attr('class', 'btn btn-outline-primary apply-btn');
            }
            $(this).slideDown("slow");
        });   
    });
    </script>