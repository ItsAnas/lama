<%- contentFor('body') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/home"><img src="/images/llama-01.png" width="30" height="30" alt="">  Lama</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/my-profile"><i class="fas fa-user"></i> MyProfile</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/users-list"><i class="fas fa-users"></i> Users List</a>
            </li>  
          </ul>
        </div>
      </nav>
<div class="container animated fadeIn">
  <div class="card post post-project">
    <h1 class="display-4" style="margin-left:20px">
        New project
    </h1>
    <hr>
    <div class="row" style="margin:10px">
        <div class="col-xs-6 col-md-4 col-lg-2 vcenter">
            <div style="height:10em">
                <img src="https://www.w3schools.com/bootstrap4/img_avatar1.png" class="user-img img-rounded">
            </div>
        </div>

        <div class="col-xs-6 col-md-8 col-lg-10 vcenter">
            <div>
                <div class="form-group">
                    <label for="usr">Project's Name:</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <form>
                        <label for="comment">Description:</label>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                        <hr>
                        <p>Language/Tools:</p>

                        <div id="tags"></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-4 col-lg-2 vcenter">
        </div>
        <div class="col-xs-6 col-md-8 col-lg-10 vcenter">
            <button class="btn btn-outline-primary">Post</button>
        </div>
      </div>
    </div>
    <% data.forEach(elem => { %>
    <div class="card post">
        <div class="row" style="margin:10px">
            <div class="col-xs-6 col-md-4 col-lg-2 d-flex flex-column justify-content-center ">
                    <a href="http://localhost:3000/user/<%= elem.author %>"><img src=<%= elem.profilepic %> class="img-rounded mb-2 user-img"></a>
                <a href="http://localhost:3000/user/<%= elem.author %>" class="author-link"><%= elem.author %></a>
            </div>
            <div class="col-xs-6 col-md-8 col-lg-10 d-flex flex-column justify-content-between">
                <h1>
                    <%= elem.title %>
                </h1>
                <p class="post-desc"><%= elem.description %></p>
                <div class="d-flex skill-wrapper">
                    <% const skills = elem.skills_need %>
                    <% skills.forEach(skill => { %>
                        <span class="badge badge-pill badge-primary"><%= skill %></span>                    
                    <% }) %>
                </div>
                <div class="post-footer">
                    <button class="btn btn-outline-primary apply-btn ">Join</button>
                </div>
            </div>
        </div>
      </div>
    <% }) %>
</div>
<script>
    $(".apply-btn").click(function(){
    $(this).slideUp("slow", function(){
      if ($(this)[0].classList[1] == "btn-outline-primary")
        {
          $(this).html("Cancel");  
          $(this).attr('class', 'btn btn-danger apply-btn');
        }
      else
        {
              $(this).html("Apply");  
              $(this).attr('class', 'btn btn-outline-primary apply-btn');
        }
        $(this).slideDown("slow");
    });   
});
new Taggle('tags');
</script>